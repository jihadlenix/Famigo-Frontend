<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:fitsSystemWindows="true"
    android:paddingTop="32dp"
    tools:context=".TaskCalendarActivity">

    <!-- HEADER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="28dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/button_add_task"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add"
            app:tint="@color/text_primary"
            android:contentDescription="@string/add_task"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/text_header_title"
            app:layout_constraintTop_toTopOf="@id/text_header_title"/>

        <TextView
            android:id="@+id/text_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Calendar"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/button_add_task"
            app:layout_constraintEnd_toStartOf="@id/button_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>

        <ImageButton
            android:id="@+id/button_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_profile"
            app:tint="@color/text_primary"
            android:contentDescription="@string/profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/text_header_title"
            app:layout_constraintTop_toTopOf="@id/text_header_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- COINS ROW -->
    <LinearLayout
        android:id="@+id/coins_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_coin"
            android:contentDescription="@string/coins"
            app:tint="@color/text_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Coins"
            android:textColor="@color/text_primary"
            android:textSize="14sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/text_coins_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- SCROLL CONTENT -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/coins_container"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- My Tasks Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Tasks"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/icon_calendar_toggle"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_calendar"
                android:background="@drawable/green_circle_bg"
                android:padding="8dp"
                android:contentDescription="@string/calendar"/>

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <!-- My Tasks Title -->
            <TextView
                android:id="@+id/text_my_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Tasks"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:paddingStart="16dp"/>

            <!-- DYNAMIC MY TASKS -->
            <LinearLayout
                android:id="@+id/container_my_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"/>

            <!-- Family Tasks Title -->
            <TextView
                android:id="@+id/text_family_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family Tasks"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="24dp"
                android:paddingStart="16dp"/>

            <!-- DYNAMIC FAMILY TASKS -->
            <LinearLayout
                android:id="@+id/container_family_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAV -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="@android:color/transparent"
            app:tint="@color/text_primary"/>

        <ImageButton
            android:id="@+id/nav_messages"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_mail"
            android:background="@android:color/transparent"
            app:tint="@color/text_secondary"/>

        <ImageButton
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            android:background="@android:color/transparent"
            app:tint="@color/text_secondary"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
