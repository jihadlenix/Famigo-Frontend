<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Reward Badge/Icon Area -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/reward_gradient_bg"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.ExtraLarge">

            <TextView
                android:id="@+id/rewardIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ"
                android:textSize="48sp"
                android:layout_gravity="center" />

        </FrameLayout>

        <!-- Reward Title -->
        <TextView
            android:id="@+id/rewardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reward Title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1F2937"
            android:layout_marginTop="14dp" />

        <!-- Reward Description -->
        <TextView
            android:id="@+id/rewardDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description goes here"
            android:textSize="12sp"
            android:textColor="#6B7280"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Points and Button Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="14dp">

            <!-- Points Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/points_badge_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ¨"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/rewardCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 pts"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#6366F1" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Redeem Button -->
            <Button
                android:id="@+id/redeemBtn"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Redeem"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/redeem_button_bg"
                android:textColor="@android:color/white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>