<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_task_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:fitsSystemWindows="true"
    tools:context=".AddTaskActivity">


    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header_add_task"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="28dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/back"
            app:tint="@color/text_primary" />

        <TextView
            android:id="@+id/text_add_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/add_task"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

    </LinearLayout>


    <!-- SCROLL CONTENT -->
    <ScrollView
        android:id="@+id/add_task_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_add_task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">


            <!-- Task Title Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_title"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Task Title Input -->
            <EditText
                android:id="@+id/input_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/input_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/text_primary"
                android:hint="@string/enter_task_title"
                android:textColorHint="@color/placeholder_green" />


            <!-- Description Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/description"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <!-- Description Input -->
            <EditText
                android:id="@+id/input_description"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/input_bg"
                android:gravity="top"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:hint="@string/enter_description"
                android:textColorHint="@color/placeholder_green" />


            <!-- Deadline Row -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/deadline"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@color/input_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_deadline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/select_deadline"
                    android:textColor="@color/placeholder_green" />

                <ImageView
                    android:id="@+id/icon_deadline"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/placeholder_green" />

            </LinearLayout>


            <!-- Assigned To -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/assigned_to"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_assigned"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/input_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />



            <!-- Points -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/points"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@color/input_bg"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <EditText
                    android:id="@+id/input_points"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/enter_points"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/placeholder_green" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_coin"
                    app:tint="@color/placeholder_green" />

            </LinearLayout>


            <!-- Submit Button -->
            <Button
                android:id="@+id/button_submit_task"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/button_green"
                android:text="@string/submit_task"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
