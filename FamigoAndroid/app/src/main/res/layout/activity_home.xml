<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="24dp"
    android:paddingBottom="24dp">

    <!-- small top title -->
    <TextView
        android:id="@+id/familyAppLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family App"
        android:textSize="12sp"
        android:textColor="@color/muted_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- help icon -->
    <ImageView
        android:id="@+id/helpIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/ic_menu_help"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/welcomeTitle"
        style="@style/FamigoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome to Our Family App"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/familyAppLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <TextView
        android:id="@+id/welcomeSubtitle"
        style="@style/FamigoMutedText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Connect with your loved ones and share special moments together."
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/registerFamilyBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_primary_button"
        android:text="Register a New Family"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/welcomeSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/joinFamilyBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_social_button"
        android:text="Join an Existing Family"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/registerFamilyBtn"
        app:layout_constraintStart_toStartOf="@id/registerFamilyBtn"
        app:layout_constraintEnd_toEndOf="@id/registerFamilyBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>
