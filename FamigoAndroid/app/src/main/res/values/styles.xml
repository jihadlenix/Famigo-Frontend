<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Famigo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>

        <item name="colorPrimary">@color/famigo_green</item>
        <item name="colorAccent">@color/famigo_green</item>
        <item name="android:colorAccent">@color/famigo_green</item>
        <item name="android:colorControlHighlight">@color/famigo_green</item>
    </style>

    <style name="FamigoTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="FamigoBody">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="FamigoMutedText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/muted_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>




</resources>
